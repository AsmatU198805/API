@page "/MunitList"
@inject HttpClient Http
@inject NavigationManager Nav
@rendermode InteractiveServer
@using Web.Model


<h3 style="color:darkblue;">Measuring Units List</h3>

<div class="text-end mb-2">
<button class="btn btn-danger" @onclick="GoToAddForm"> Add Munit</button>
</div>

<br/>
@if (isLoading)
{
    <p><em>Loading measuring units...</em></p>
}
else if (munitlist != null && munitlist.Count > 0)
{

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Measuring Unit ID</th>
                <th>Measuring Unit Code</th>
                <th>Measuring Unit Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in munitlist)
            {
                <tr>
                    <td>@item.MUnitId</td>
                    <td>@item.MUnitCode</td>
                    <td>@item.MUnitName</td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => DeleteMUnit(item.MUnitId)">Delete M.Unit</button>
                        <button class="btn btn-primary" @onclick="() => EditMUnit(item.MUnitId)">Edit M.Unit</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (munitlist != null && munitlist.Count == 0)
{
    <div class="alert alert-info">No measuring units found.</div>
}

<RadzenDataGrid PageSize="5" AllowPaging="true" AllowSorting="true" Data="@munitlist" ColumnWidth="400px">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(MUnitModel.MUnitCode)" Title="First Name" Width="150px" />
        <RadzenDataGridColumn Property="@nameof(MUnitModel.MUnitName)" Title="Last Name" Width="150px" />
        <RadzenDataGridColumn Property="@nameof(MUnitModel.MUnitId)" Title="Birth Date" FormatString="{0:d}" Width="150px" />
   
    </Columns>
</RadzenDataGrid>




@code {
    private int MunitId;
    private string? message;

    List<MUnitModel>? munitlist;
    bool isLoading = false;

    private async Task LoadMUnitList()
    {
        try
        {
            isLoading = true;
            munitlist = await Http.GetFromJsonAsync<List<MUnitModel>>("http://localhost:5104/api/MUnit");
        }
        catch(Exception ex)
        {
            Console.WriteLine($"Error loading measuring units: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }

    }

    private async Task DeleteMUnit(int munitid)
    {
        try
        {
            var response = await Http.DeleteAsync($"http://localhost:5104/api/MUnit/{munitid}");

            if (response.IsSuccessStatusCode)
            {
                await LoadMUnitList();   // refresh grid
            }
            else
            {
                message = "Delete failed.";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }

    private void EditMUnit(int id)
    {
        Nav.NavigateTo($"/UpdateMUnit/{id}");
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadMUnitList();
    }

    private void GoToAddForm()
    {
        Nav.NavigateTo("/Munitform");
    }
}
